<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN"
        "http://directwebremoting.org/dwr/dwr20.dtd">

<dwr>
    <allow>
        <create creator="new" javascript="JDate">
            <param name="class" value="java.util.Date"/>
        </create>

        <!--new表示是实例化一个对象，Hello表示类对应的js文件名-->
        <create creator="new" javascript="Hello">
            <param name="class" value="com.dwr.HelloWorld"></param>
        </create>

        <create creator="new" javascript="SendData">
            <param name="class" value="com.dwr.SendData"></param>
            <include method="sendData"></include>
        </create>
    </allow>
</dwr>